<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:background="#13314b"
    android:orientation="vertical"
    android:id="@+id/detail">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Create/Modify"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="28dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/txtIdproductmodel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:hint="Enter ID"
        android:textColorHint="#798488"
        android:textColor="@color/white"
        android:background="#091926"
        android:paddingLeft="10dp"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/txtNameproductmodel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:hint="Product name"
        android:textColorHint="#798488"
        android:textColor="@color/white"
        android:background="#091926"
        android:paddingLeft="10dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/txtInStockProductmodel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:hint="InStock"
        android:textColorHint="#798488"
        android:textColor="@color/white"
        android:background="#091926"
        android:paddingLeft="10dp"
        android:layout_marginTop="16dp"
        />

    <Button
        android:onClick="onAdd"
        android:layout_marginTop="20dp"
        android:id="@+id/btnAddPrModel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:text="Add"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:backgroundTint="#0987c1"/>

    <Button
        android:onClick="onUpdate"
        android:layout_marginTop="20dp"
        android:id="@+id/btnUpdatePrModel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:text="Update"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:backgroundTint="#0987c1"/>

    <Button
        android:onClick="onDelete"
        android:layout_marginTop="20dp"
        android:id="@+id/btnDelPrModel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:text="Delete"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:backgroundTint="#0987c1"/>
</LinearLayout>