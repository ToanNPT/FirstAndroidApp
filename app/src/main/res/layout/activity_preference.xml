<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:stretchColumns="1"

    >
    <TableRow
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        >
        <TextView
            android:text="PREFERENCE EXAM"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_span="2"
            android:textStyle="bold"
            android:textColor="#000"

            />
    </TableRow>

    <TableRow
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >

        <TextView
            android:text="Enter key name:"
            android:layout_span="1"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/preName"
            android:layout_marginLeft="8dp"
            android:hint="Enter name" />

    </TableRow>

    <TableRow
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:text="Value Key:"
            android:layout_span="1"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/prePass"
            android:layout_marginLeft="8dp"
            android:inputType="text"
            android:hint="Enter password"/>
    </TableRow>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnwrite"
            android:onClick="btn_write_click"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Write"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#ccc"
            android:textColor="#000"/>

        <Button
            android:id="@+id/btnRead"
            android:onClick="btn_read_click"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Read"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#ccc"
            android:textColor="#000"/>

        <Button
            android:id="@+id/btnRemove"
            android:onClick="btn_remove_click"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Remove"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#ccc"
            android:textColor="#000"/>
    </LinearLayout>
</TableLayout>
